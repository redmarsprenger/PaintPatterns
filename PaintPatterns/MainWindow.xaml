<Window x:Class="PaintPatterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintPatterns"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <Canvas Height="400" Width="700" Background="White" Margin="10,10,83.6,10" Name="Canvas">

        </Canvas>
        <Button Width="80" Height="20" HorizontalAlignment="Right" Name="RectangleBtn" Content="Rectangle" Margin="0,-200,3.6,0" Click="RectangleBtn_Click" />
        <Button Width="80" Height="20" HorizontalAlignment="Right" Name="TriangleBtn" Content="Triangle" Margin="0,-150,3.6,0" Click="TriangleBtn_Click"/>
        <Button Width="80" Height="20" HorizontalAlignment="Right" Name="CircleBtn" Content="Circle" Click="CircleBtn_Click" Margin="0,-100,3.6,0"/>
    </Grid>
</Window>
